<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.MainPage"
             Title="NotePad">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Editor
                HeightRequest="500"
                x:Name="CaixaEditor"
                Text=""/>
            <HorizontalStackLayout
                 Padding="30,0"
                 Spacing="30">
                <Button
                    x:Name="Salvarbtn"
                    Text="Salvar" 
                    SemanticProperties.Hint="Salvar a anotação"
                    Clicked="Salvarbtn_Clicked"
                    HorizontalOptions="Fill" />
                <Button
                    x:Name="Apagarbtn"
                    Text="Apagar" 
                    SemanticProperties.Hint="Deletar a anotação. Caso não exista anotação, avisa ao usuário que a anotação já foi apagada ou é inexistente."
                    Clicked="Apagarbtn_Clicked"
                    HorizontalOptions="Fill" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
